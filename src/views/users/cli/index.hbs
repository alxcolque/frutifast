<section class="page-section bg-secondary">
    <div class="container p-4">
        <div class="row">
            {{>message}}
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>Bienvenido {{user.name}}</h3>
                        <h4>{{user.username}}</h4>
                        <a href="/cliente" class="btn btn-primary m-4">
                            OK
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<section class="p-5">
    <h4>Todos los productos</h4>

    <div class="row">
        {{#if stocks}}
        {{#each stocks}}
        <div class="col-md-3 mt-3">
            <div class="card bg-primary text-light">
                <div class="card-header">
                    <i class="fas fa-business-time"></i><strong class="card-title pl-2">{{this.item}}</strong>
                </div>
                <div class="card-body">
                    <center>
                        <img class="" src="img/upload/{{picture}}" width="100%" height="100%" alt="Card image cap">
                        <h5 class="text-sm-center mt-2 mb-1">{{this.price}} BS</h5>
                    </center>
                    <div class="location text-sm-center">{{type}}</div>
                    <hr>
                    <div class="card-text text-sm-center">
                        <center>
                            <button class="btn btn-warning" title="Editar Tipo"
                                onclick="updateRol('{{item_id}})"><i
                                    class="fas fa-shopping-cart"></i>Ordenar</button>
    
                            
                        </center>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    {{else}}
    
    {{/if}}
    </div>
</section>
