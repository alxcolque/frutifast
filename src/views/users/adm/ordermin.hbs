<section class="p-5">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Menos ordenados </h4>
        </div>
        <div class="card-body--">
            <div class="">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if orders}}

                        {{#each orders}}
                        <tr role="row" class="odd">
                            <td>{{this.order_id}}</td>
                            <td class="sorting_1">{{this.name}}</td>
                            <td class="sorting_1">{{this.pname}}</td>
                            <td class="sorting_1">{{this.quantity}}</td>
                            <td class="sorting_1">

                                {{#switch this.stat }}
                                {{#case 'PENDIENTE'}} <p class="bg-warning">{{this.stat}}</p>{{/case}}
                                {{#case 'COMPLETADO'}} <p class="bg-success">{{this.stat}}</p> {{/case}}
                                {{#case 'RECHAZADO'}} <p class="bg-danger">{{this.stat}}</p>{{/case}}

                                {{/switch}}

                            </td>
                        </tr>
                        {{/each}}
                        {{else}}

                        {{/if}}
                    </tbody>
                </table>

            </div> <!-- /.table-stats -->
        </div>
    </div>
</section>