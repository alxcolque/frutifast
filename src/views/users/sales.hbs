{{>message}}
<div class="card">
    <div>
        <button title="AÃ±adir Nuevo" class="btn btn-info btn-sm" onclick="setSale()">
            <i class="fa fa-plus"></i>
            Realizar venta
        </button>
    </div>

</div>
<div class="row">
    <div class="col-md-12 mt-3">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Foto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {{#if sales}}

                {{#each sales}}
                <tr role="row" class="odd">
                    <td class="sorting_1">{{this.sale_id}}</td>
                    <td class="sorting_1">{{this.item}}</td>
                    <td class="sorting_1">
                        <center>
                            <img class="" src="img/upload/{{picture}}" width="100%" height="100%" alt="Card image cap">
                        </center>
                    </td>
                    <td class="sorting_1">{{this.price}}</td>
                    <td class="sorting_1">{{this.quantity}}</td>
                    <td class="sorting_1">{{this.total}}</td>
                </tr>
                {{/each}}
                {{else}}

                {{/if}}
            </tbody>
        </table>
    </div>

</div>