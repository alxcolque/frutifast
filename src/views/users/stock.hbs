{{>message}}
<div class="card">
    <div>
        <button title="Añadir Nuevo" class="btn btn-info btn-sm" onclick="setItems()">
            <i class="fa fa-plus"></i>
            Añadir Productos al almacen
        </button>
    </div>

</div>
<div class="row">
    {{#each stocks}}
    <div class="col-md-2 mt-3">
        <div class="card bg-primary text-light">
            <div class="card-header">
                <i class="fa fa-business-time"></i><strong class="card-title pl-2">{{name}}</strong>
            </div>
            <div class="card-body">
                <center>
                    <img class="" src="img/upload/{{picture}}" width="100" height="100" alt="Card image cap">
                    <h5 class="text-sm-center mt-2 mb-1">{{price}} BS</h5>
                </center>
                <div class="location text-sm-center">{{type}}</div>
                <hr>
                <div class="card-text text-sm-center">
                    <center>
                        <button class="btn btn-warning" title="Editar Tipo"
                            onclick="updateItem('{{item_id}}','{{type_id}}','{{name}}','{{price}}')"><i
                                class="fa fa-edit"></i></button>

                        <a href="stocks/delete/{{item_id}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>

                    </center>
                </div>
            </div>
        </div>
    </div>


    {{/each}}
</div>