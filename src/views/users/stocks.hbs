{{>message}}
<div class="card">
    <div>
        <button title="Añadir Nuevo" class="btn btn-info btn-sm" onclick="setStoks()">
            <i class="fa fa-plus"></i>
            Añadir Productos al Stock
        </button>
    </div>

</div>
<div class="row">
    <div class="col-md-12 mt-3">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Foto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Unidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#if stocks}}

                {{#each stocks}}
                <tr role="row" class="odd">
                    <td class="sorting_1">{{this.item_id}}</td>
                    <td class="sorting_1">{{this.item}}</td>
                    <td class="sorting_1">
                        <center>
                            <img class="" src="img/upload/{{picture}}" width="100%" height="100%" alt="Card image cap">
                        </center>
                    </td>
                    <td class="sorting_1">{{this.price}}</td>
                    <td class="sorting_1">{{this.quantity}}</td>
                    <td class="sorting_1">{{this.unit}}</td>
                    <td>
                        <center>
                            <button class="btn btn-success" title="Aumentar"
                                onclick="updateStocks('{{this.warehouse_id}}','{{this.item_id}}','{{this.quantity}}')">
                                Aumentar</button>
                            <button class="btn btn-danger" title="Elimnar"
                                onclick="deleteStock('{{this.warehouse_id}}','{{this.item_id}}')">
                                <i class="fas fa-trash"></i></button>


                        </center>
                    </td>
                </tr>
                {{/each}}
                {{else}}

                {{/if}}
            </tbody>
        </table>
    </div>

</div>