{{>message}}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Tabla personals</strong>

        </div>
        <div class="card-body">
            <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">

                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Personal</th>
                                    <th>Foto</th>
                                    <th>Rol</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#if personals}}

                                {{#each personals}}
                                <tr role="row" class="odd">
                                    <td>{{this.user_id}}</td>
                                    <td class="sorting_1">{{this.name}}</td>
                                    <td class="sorting_1">
                                        <center>
                                            <img class="" src="img/profile/{{this.pic}}" width="50" height="50" alt="Card image cap">
                                        </center>
                                    </td>
                                    <td class="sorting_1">{{this.role}}</td>
                                    <td>
                                        <center>
                                            <button class="btn btn-warning" title="Editar Usuario"
                                                onclick="updateRol('{{this.user_id}}')"><i
                                                    class="fa fa-edit"></i></button>

                                            
                                        </center>
                                    </td>
                                </tr>
                                {{/each}}
                                {{else}}

                                {{/if}}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>