    <div class="container p-4">
        <div class="row">
            {{>message}}
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="mx-auto d-block">
                            <img class="rounded-circle mx-auto d-block" src="img/profile/{{user.pic}}" width="200" height="200" alt="profile">
                            <div class="location text-sm-center">ID {{user.user_id}}</div>
                            <h5 class="text-sm-center mt-2 mb-1">{{user.name}}</h5>
                            <div class="location text-sm-center">Nombe de Usuario: {{user.user_name}}</div>
                            <div class="location text-sm-center"><i class="fa fa-map-marker"></i> Bolivia, Sud Am√©rica</div>
                        </div>
                        <hr>
                    </div>
                    <div class="card-footer">
