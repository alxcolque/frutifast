<section class="page-section bg-secondary">
    <div class="container p-4">
        <div class="row">
            {{>message}}
            <form action="/profile/edit/{{user.user_id}}" method="POST" enctype="multipart/form-data">
                <div class="col-md-12 mx-auto">
                    <div class="card">
                        <div class="card-header"><strong>Kulking</strong><small> Company</small></div>
                        <div class="card-body card-block">
                            <div class="form-group">
                                <label for="name" class=" form-control-label">Nombre</label>
                                <input type="text" name="name" class="form-control" value="{{user.name}}" required>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-12">Cambiar Foto de Perfil</label>
                                <div class="col-md-12">
                                    <input type="file" class="form-control" name="pic" value="{{user.pic}}" required>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Guardar
                                <span class="fa fa-save" aria-hidden="true"></span>
                            </button>
                            <a href="/profile" type="button" class="btn btn-danger" >Cancel
                            </a>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>
</section>