<section class="page-section bg-secondary">
    <div class="container p-4">
        <div class="row">
            {{>message}}
            <form action="/cliente/add" method="POST">
                <div class="col-md-12 mx-auto">
                    <div class="card">
                        <div class="card-header">Realizar Orden</div>
                        <div class="card-body card-block">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="control-label col-md-12">Cantidad a Ordenar</label>
                                    <input type="number" value="1" name="price" min="1" max="1000000">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-12">Direcci√≥n</label>
