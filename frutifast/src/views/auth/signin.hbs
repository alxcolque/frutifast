<section class="page-section bg-secondary" id="signin">
    <div class="container p-4">
        <div class="row">
            {{>message}}
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Iniciar Sesi√≥n</h3>
                    </div>
                    <img src="/img/logo/logo4.png" alt="Logo Kulking" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <div class="card-body">
                        <form action="/signin" method="POST">
                            <div class="form-group">
                                <input type="text" name="user_name" placeholder="Nombre de Usuario" class="form-control"
